{
  "include": ["./src/*", "index.ts"],
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "strict": true,
    "jsx": "preserve",
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
